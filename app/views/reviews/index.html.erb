<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
              <%= @agent.last_name %> <%= @agent.first_name %>
            </p>
          </header>
          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= @agent.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                <%= @agent.avg_score %>点（<%= @agent.reviews.count %>件のレビュー）
              </div>
            </div>
          </div>
        </div>
        <div class="is-centered">
        <table class="table is-fullwidth is-hoverable is-bordered">
          <thead class="has-text-centered">
            <tr>
              <th>ユーザー名</th><th>点数</th><th>口コミ</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.user.nickname %></td>
                <td><%= review.score %></td>
                <td><%= simple_format(review.content) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</section>